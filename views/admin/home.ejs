    <div id="page-wrapper" class="gray-bg">

        <!-- HEADER -->
        <div th:replace="/faculty/tpl/header :: header"></div>
        <!-- END HEADER -->

        <!-- PAGE TITLE -->
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-10">
                <h2 id="dsdv">Danh sách kì thi</h2>
            </div>
        </div>
        <!-- END PAGE TITLE -->

        <!-- PAGE CONTENT -->
        <div id="supervisorManager" class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <section id="thesis-list">
                            <div th:fragment="thesisContent" class="ibox-content">
                                <div class="table-responsive">
                                    <div>Kì thi : </div>
                                    <table class="table table-striped table-bordered table-hover" id="thesis-table">
                                        <thead>
                                            <tr>
                                                <th><input type="checkbox" class="i-checks" name="cbox-total"></th>
                                                <th>Môn thi</th>
                                                <th>Mã môn thi</th>
                                                <th>Tín chỉ</th>
                                                <th>Ca thi</th>
                                                <th>Phòng thi</th>
                                                <th>Thời gian</th>
                                                <th>Số lượng máy</th>
                                                <th>Số sinh viên đã đăng kí</th>
                                                <th>Tùy chọn</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        <tr th:each="thesis: ${theses}">
                                            <input class="thId" type="hidden" th:value="${thesis.thesisId}">
                                            <td><input type="checkbox" class="i-checks" name="cbox"></td>
                                            <td class="thTitle" th:text="${thesis.title}"></td>
                                            <td class="thStudent">
                                                <div th:text="${thesis.student.name}"></div>
                                                <div><em th:text="'(' + ${thesis.student.studentCode} + ' - ' + ${thesis.student.clazz.name} +')'"></em></div>
                                            </td>
                                            <td class="thSupervisor">
                                                <div th:text="${thesis.firstSupervisor.name}"></div>
                                                <div th:if="${thesis.secondSupervisor}" th:text="${thesis.secondSupervisor.name}"></div>
                                            </td>
                                            <td class="thStatus" th:text="${thesis.status.name}"></td>
                                            <td></td>
                                            <td class="abc"></td>
                                            <td class="abc"></td>
                                            <td class="abc"></td>
                                            <td >
                                                <i class="fa fa-pencil font-primary" aria-hidden="true"></i>
                                                <i class="fa fa-trash font-danger" aria-hidden="true"></i>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                    <a href="createExam.ejs"><button id="taokithi" class="btn btn-primary" >Tạo kì thi</button></a>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
