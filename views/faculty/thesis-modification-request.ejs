<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" xmlns:layout="http://www.w3.org/1999/xhtml" th:charset="UTF-8">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="_csrf" th:content="${_csrf.token}"/>
    <meta name="_csrf_header" th:content="${_csrf.headerName}"/>
    <title th:text="'Xử lý yêu cầu - ' + #{app.name}"></title>

    <!-- BEGIN MAIN LEVEL STYLES -->
    <link th:href="@{/resources/css/bootstrap.min.css}" rel="stylesheet" media="screen">
    <link th:href="@{/resources/vendor/font-awesome/css/font-awesome.css}" rel="stylesheet" media="screen">
    <link th:href="@{/resources/css/animate.css}" rel="stylesheet" media="screen">
    <link th:href="@{/resources/css/style.css}" rel="stylesheet" media="screen">
    <!-- END MAIN LEVEL STYLES -->

    <!-- BEGIN PAGE LEVEL STYLESHEETS -->
    <link th:href="@{/resources/css/wad/admin/treeview.css}" rel="stylesheet" media="screen">
    <!-- END PAGE LEVEL STYLESHEETS -->

</head>
<body>
<div id="wrapper">

    <!-- NAVIGATION -->
    <div th:replace="/faculty/tpl/header :: navigation"></div>
    <!-- END NAVIGATION -->

    <div id="page-wrapper" class="gray-bg">

        <!-- HEADER -->
        <div th:replace="/faculty/tpl/header :: header"></div>
        <!-- END HEADER -->

        <!-- PAGE TITLE -->
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-10">
                <h2 id="dsdv">Xử lý các yêu cầu thay đổi/hủy khóa luận</h2>
            </div>
        </div>
        <!-- END PAGE TITLE -->

        <!-- BEGIN PAGE CONTENT -->
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins border-bottom" th:each="thesis : ${canceledTheses}">
                        <div class="ibox-title">
                            <h5><strong>Yêu cầu hủy khóa luận: </strong><em th:text="${thesis.title}">axyz</em></h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-down"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content" style="display: none;">
                            <p><strong>Sinh viên: </strong><span th:text="${thesis.student.name}"></span></p>
                            <p><strong>Lớp: </strong><span th:text="${thesis.student.clazz.name}"></span></p>
                            <p><strong>Email: </strong><span th:text="${thesis.student.user.email}"></span></p>
                            <p><strong>Mô tả: </strong><span th:text="${thesis.description}"></span></p>
                        </div>
                        <div class="ibox-footer" style="height: 55px;">
                            <span class="pull-right">
                                <form name="thesis_action" th:action="@{'/ws/thesis/allow-cancel/' + ${thesis.thesisId}}" method="post" style="display: inline-block">
                                    <input type="hidden" th:value="${thesis.thesisId}"/>
                                    <button type="submit" class="btn btn-primary">Chấp nhận</button>
                                </form>
                                <form name="thesis_action" th:action="@{'/ws/thesis/deny-cancel/' + ${thesis.thesisId}}" method="post" style="display: inline-block">
                                    <input type="hidden" th:value="${thesis.thesisId}"/>
                                    <button type="submit" class="btn btn-danger">Từ chối</button>
                                </form>
                                <form name="export_thesis" th:action="@{'/faculty/export/thesis/cancel/' + ${thesis.thesisId}}" method="get" style="display: inline-block">
                                    <button type="submit" class="btn btn-warning">Xuất văn bản</button>
                                </form>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins border-bottom" th:each="thesis : ${modifiedTheses}">
                        <div class="ibox-title">
                            <h5><strong>Yêu cầu sửa khóa luận: </strong><em th:text="${thesis.title}">axyz</em></h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-down"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content" style="display: none;">
                            <p><strong>Sinh viên: </strong><span th:text="${thesis.student.name}"></span></p>
                            <p><strong>Lớp: </strong><span th:text="${thesis.student.clazz.name}"></span></p>
                            <p><strong>Email: </strong><span th:text="${thesis.student.user.email}"></span></p>

                        </div>
                        <div class="ibox-footer" style="height: 55px;">
                                <span class="pull-right">
                                    <form name="thesis_action" th:action="@{'/ws/thesis/allow-modify/' + ${thesis.thesisId}}" method="post" style="display: inline-block">
                                        <input type="hidden" th:value="${thesis.thesisId}"/>
                                        <button type="submit" class="btn btn-primary"> Chấp nhận</button>
                                    </form>
                                    <form name="thesis_action" action="#" method="post" style="display: inline-block">
                                        <input type="hidden" th:value="${thesis.thesisId}"/>
                                        <button type="submit" class="btn btn-danger">Từ chối</button>
                                    </form>
                                    <form name="export_thesis" th:action="@{'/faculty/export/thesis/modify/' + ${thesis.thesisId}}" method="get" style="display: inline-block">
                                        <button type="submit" class="btn btn-warning">Xuất văn bản</button>
                                    </form>
                                </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT -->

        <!-- FOOTER -->
        <div th:replace="/faculty/tpl/footer :: footer"></div>
        <!-- END FOOTER -->

    </div>
</div>

<!-- BEGIN MAIN LEVEL SCRIPTS -->
<script type="text/javascript" th:src="@{/resources/js/jquery-2.1.1.js}"></script>
<script type="text/javascript" th:src="@{/resources/js/bootstrap.min.js}"></script>
<script type="text/javascript" th:src="@{/resources/js/plugins/metisMenu/jquery.metisMenu.js}"></script>
<script type="text/javascript" th:src="@{/resources/js/plugins/slimscroll/jquery.slimscroll.min.js}"></script>
<!-- END MAIN LEVEL SCRIPTS -->

<!-- BEGIN PAGE LEVEL SCRIPTS -->
<script type="text/javascript" th:src="@{/resources/js/wad/treeview.js}"></script>
<!-- END PAGE LEVEL SCRIPTS -->

<!-- BEGIN CUSTOM SCRIPTS -->
<script th:src="@{/resources/js/inspinia.js}"></script>
<script th:src="@{/resources/js/plugins/pace/pace.min.js}"></script>
<!-- END CUSTOM SCRIPTS -->

<!-- BEGIN INLINE SCRIPTS -->
<script type="text/javascript">
    $('form[name="thesis_action"]').on('submit', function() {
        var form = $(this);
        $.ajax({
            url: form.attr('action'),
            type: 'POST',
            beforeSend: function(xhr) {
                xhr.setRequestHeader("Accept", "application/json");
                xhr.setRequestHeader("Content-Type", "application/json");
            },
            success: function(rsp) {
                alert(rsp.message);
                form.closest('div.ibox').remove();
            }
        });
        return false;
    });

    var token = $("meta[name='_csrf']").attr("content");
    var header = $("meta[name='_csrf_header']").attr("content");
    $(document).ajaxSend(function(e, xhr, options) {
        xhr.setRequestHeader(header, token);
    });
</script>
<!-- END INLINE SCRIPTS -->
</body>

</html>
